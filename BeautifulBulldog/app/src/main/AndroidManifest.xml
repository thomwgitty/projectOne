<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tom.beautifulbulldog">

    <application
        android:name=".BulldogApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bulldog"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BulldogListActivity" />
        <activity android:name=".BulldogActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewBulldogActivity"
            android:label="@string/title_activity_new_bulldog"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>